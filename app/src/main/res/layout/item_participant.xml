<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/background_participant_item">

    <TextView
        android:id="@+id/textViewParticipantName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:textColor="@color/colorNormalBrown"
        android:textSize="24sp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textViewParticipantGender"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/colorLightBrown"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/textViewParticipantType"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/colorLightBrown"
            android:textSize="14sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iconEditParticipant"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:alpha="0.3"
        android:src="@drawable/ic_edit"/>
    <ImageView
        android:id="@+id/iconDeleteParticipant"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:alpha="0.3"
        android:src="@drawable/ic_delete"/>

</LinearLayout>