<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_special_section"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.katesudal.participantgroupmanagement.Activity.ManageSpecialGroup">
    <LinearLayout
        android:id="@+id/layoutAddSpecial"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:padding="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="24sp"
            android:text="Section Name : "/>
        <EditText
            android:id="@+id/editTextSpecialGroupName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:padding="3dp"/>
        <Button
            android:id="@+id/buttonAddSpecialGroupName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="+ Add"/>
    </LinearLayout>
    <ListView
        android:id="@+id/listViewSpecialGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/layoutAddSpecial"
        />
    <Button
        android:id="@+id/buttonBacktoMainFromManageSpecialGroup"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:text="Back to main"/>
</RelativeLayout>
