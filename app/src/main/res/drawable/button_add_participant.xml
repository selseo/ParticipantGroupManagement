<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="@color/colorDarkBrown"
                android:startColor="@color/colorDarkBrown" />

            <corners android:radius="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke
                android:width="0.5dp"
                android:color="@color/colorLightBrown"
                android:dashGap="20dp"/>

            <gradient
                android:angle="90"
                android:startColor="@color/colorLightBrown"
                android:endColor="@color/colorLightBrown"
                />

            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>