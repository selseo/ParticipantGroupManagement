<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/colorDarkCream"
                android:endColor="@color/colorDarkCream"
                 />

            <corners android:radius="0dp" />
        </shape>
    </item>
    <item>
        <shape>

            <gradient
                android:angle="90"

                android:startColor="@color/colorLightCream"
                android:endColor="@color/colorLightCream"
                />

            <corners android:radius="0dp" />
        </shape>
    </item>
</selector>